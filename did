server {
  root /var/www/did/front;
  index index.html index.htm index.nginx-debian.html;

  server_name www.didge.ai didge.ai;

  location / {
    try_files $uri $uri/ /index.html =404;
  }

  listen [::]:443 ssl ipv6only=on; # managed by Certbot
  listen 443 ssl; # managed by Certbot
  ssl_certificate /etc/letsencrypt/live/didge.ai/fullchain.pem; # managed by Certbot
  ssl_certificate_key /etc/letsencrypt/live/didge.ai/privkey.pem; # managed by Certbot

  include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
  ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot
}

server {
  listen 443 ssl;
  server_name new.didge.ai www.new.didge.ai;
  add_header X-Frame-Options "SAMEORIGIN";
  add_header X-XSS-Protection "1; mode=block";
  add_header X-Content-Type-Options "nosniff";

  charset utf-8;

  location / {
    root /var/www/did/front;
    index index.html;
    try_files $uri $uri/ /index.html =404;
  }

  ssl_certificate /etc/letsencrypt/live/new.didge.ai/fullchain.pem; # managed by Certbot
  ssl_certificate_key /etc/letsencrypt/live/new.didge.ai/privkey.pem; # managed by Certbot
}

server {
  listen 443 ssl;
  server_name api.didge.ai www.api.didge.ai;

  add_header X-Frame-Options "SAMEORIGIN";
  add_header X-XSS-Protection "1; mode=block";
  add_header X-Content-Type-Options "nosniff";

  charset utf-8;

  root /var/www/did/api/public;
  index index.php;

  location / {
    try_files $uri $uri/ /index.php?$args;
  }

  location ~ \.php$ {
    fastcgi_pass unix:/var/run/php/php7.4-fpm.sock;
    fastcgi_index index.php;
    fastcgi_param SCRIPT_FILENAME $realpath_root$fastcgi_script_name;
    include fastcgi_params;
  }

  location = /favicon.ico {
    access_log off; log_not_found off;
  }

  location = /robots.txt {
    access_log off; log_not_found off;
  }

  error_page 404 /index.php;

  ssl_certificate /etc/letsencrypt/live/api.didge.ai/fullchain.pem; # managed by Certbot
  ssl_certificate_key /etc/letsencrypt/live/api.didge.ai/privkey.pem; # managed by Certbot
}

server {
  listen 80;
  listen [::]:80;
  server_name api.didge.ai www.api.didge.ai;
  return 301 https://api.didge.ai$request_uri;
}

server {
  listen 80;
  listen [::]:80;
  server_name new.didge.ai www.new.didge.ai;
  return 301 https://new.didge.ai$request_uri;
}

server {
  if ($host = new.didge.ai) {
    return 301 https://$host$request_uri;
  }

  if ($host = api.didge.ai) {
    return 301 https://$host$request_uri;
  }

  if ($host = www.didge.ai) {
    return 301 https://$host$request_uri;
  }

  if ($host = didge.ai) {
    return 301 https://$host$request_uri;
  }

  listen 80;
  listen [::]:80;

  server_name www.didge.ai didge.ai api.didge.ai www.api.didge.ai new.didge.ai www.new.didge.ai;
  return 404;
}